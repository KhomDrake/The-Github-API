<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:outlineProvider="background"
    android:layout_marginTop="16dp"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/background_rounded_white_medium">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Github.Style.Text.SubTitle.Primary"
        tools:text="Title: Not working"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Github.Style.Text.SubTitle.Primary"
        tools:text="Author: KhomDrake"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Github.Style.Text.Normal.Primary"
        tools:text="State: Open"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/access"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/issues_access_issue"
        style="@style/Github.Style.Text.Normal.Secondary"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:alpha=".6"
        style="@style/Github.Style.Text.Normal.Primary"
        tools:text="Created: 02/05/2020"/>

</androidx.appcompat.widget.LinearLayoutCompat>